{
  "manifest_version": 3,
  "name": "Private Duplicate",
  "version": "1.0",
  "description": "Open current page in Incognito via icon, context menu or shortcut",
  "permissions": [
    "tabs",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open this page in incognito"
  },
  "commands": {
    "open_in_incognito": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "MacCtrl+A"
       },
      "description": "Open current page in incognito"
    }
  }
}
